		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
		/>
	</head>
	<nav>
		<span
			id="menu"
			class="absolute text-white text-4xl bottom-0 right-0 p-8 cursor-pointer lg:hidden"
			onclick="Openbar()"
		>
		<i class="bi bi-list px-2 bg-gray-900 rounded-full"></i>
		</span>
		<div
			class="sidebar fixed top-0 bottom-0 lg:left-0 left-[-300px] duration-1000 p-2 w-[300px] overflow-y-auto text-center bg-gray-900 shadow h-screen"
		>
			<div class="text-gray-100 text-xl">
				<div class="p-2.5 mt-1 flex items-center rounded-md">
					<img
						class="w-1/5 rounded-full"
						src="https://scontent.fhan5-10.fna.fbcdn.net/v/t1.6435-9/36487609_2083548178527794_3572739399529529344_n.jpg?_nc_cat=101&ccb=1-7&_nc_sid=09cbfe&_nc_ohc=AOEgOug1DIYAX-O3FSL&_nc_ht=scontent.fhan5-10.fna&oh=00_AT_4MOj5PJcQKggRR_U-30D1C4T-aw8X4fVUpByWBMjabg&oe=633D67E7"
						alt=""
					/>
					<h1
						class="text-[15px] ml-3 text-xl text-gray-200 font-bold"
					>
						Nam Nguyen
					</h1>
					<i
						class="space-y-0 bi bi-x ml-20 cursor-pointer lg:hidden"
						onclick="Openbar()"></i>
				</div>
				<hr class="my-2 text-gray-600" />

				<div>
					<a href="/">
						<div
							class="p-2.5 mt-2 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600"
						>
							<i class="bi bi-house-door-fill"></i>
							<span class="text-[15px] ml-4 text-gray-200"
								>Home</span
							>
						</div>
					</a>
					<a href="/blog">
						<div
							class="p-2.5 mt-2 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600"
						>
							<i class="bi bi-bookmark-fill"></i>
							<span class="text-[15px] ml-4 text-gray-200"
								>Blog</span
							>
						</div>
					</a>
					<hr class="my-4 text-gray-600" />
					<div
						class="p-2.5 mt-2 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600"
					>
						<i class="bi bi-chat-left-text-fill"></i>
						<div
							class="flex justify-between w-full items-center"
							onclick="dropDown()"
						>
							<span class="text-[15px] ml-4 text-gray-200"
								>Contact</span
							>
							<span class="text-sm rotate-180" id="arrow">
								<i class="bi bi-chevron-down"></i>
							</span>
						</div>
					</div>
					<div
						class="leading-7 text-left text-sm font-thin mt-2 w-4/5 mx-auto"
						id="submenu"
					>
						<a
							href="https://www.facebook.com/itnams12/"
							target="_blank"
							class="cursor-pointer p-2 hover:bg-gray-700 rounded-md mt-1"
						>
							Facebook
						</a>
						<h1
							class="cursor-pointer p-2 hover:bg-gray-700 rounded-md mt-1"
						>
							Github
						</h1>
						<h1
							class="cursor-pointer p-2 hover:bg-gray-700 rounded-md mt-1"
						>
							Feedback
						</h1>
					</div>
				</div>
			</div>
		</div>
		<script type="text/javascript">
			function dropDown() {
				document.querySelector("#submenu").classList.toggle("hidden");
				document.querySelector("#arrow").classList.toggle("rotate-0");
			}
			dropDown(Boolean);
			function Openbar() {
				document
					.querySelector(".sidebar")
					.classList.toggle("left-[-300px]");
				document.querySelector("#menu").classList.toggle("hidden");
			}
		</script>
	</nav>
	<body>
		<div class="ml-[60px] lg:ml-[300px]">
			<slot />
		</div>
	</body>
</html>
